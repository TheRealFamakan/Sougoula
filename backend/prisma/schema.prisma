generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client/default"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SELLER
}

enum Currency {
  DH
  FCFA
}

model User {
  id              String    @id @default(cuid())
  name            String
  email           String    @unique
  password        String
  whatsappNumber  String
  location        String?
  avatarUrl       String?
  role            UserRole  @default(SELLER)
  listings        Listing[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  price       Float
  currency   Currency  @default(DH)
  category    String
  description String
  location    String
  images      String[]
  isActive    Boolean  @default(true)
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([location])
  @@index([ownerId])
}
